<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationDetailAdder">


    <LinearLayout
        android:id="@+id/linearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="New Place Details"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="casual" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView

            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Place Name :"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FF9800"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="casual"
            />

            <EditText
                android:id="@+id/placeNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:inputType="textPersonName" />


        </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="Category :"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="casual" />

                <Spinner
                    android:id="@+id/category_list"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:dropDownWidth="285dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/locationDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="Description :"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/locationDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/difficulties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="Difficulties Faced :"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/difficultiesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="Route :"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/routeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:gravity="start|top" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/special_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="Any Special Notices :"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="casual" />

                <EditText
                    android:id="@+id/special_notice_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:gravity="start|top" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/nearestTown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10sp"
                    android:text="Nearest Town :"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="casual" />

                <Spinner
                    android:id="@+id/nearestTownList"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:dropDownWidth="250dp" />

            </LinearLayout>

            <TextView

                android:id="@+id/photo_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="Please enter an image of the place"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#07ADC5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:fontFamily="casual" />



            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/placeImage"
                    android:background="@drawable/border"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Add an image from gallery or using camera"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_photo_foreground" />

                <LinearLayout
                    android:id="@+id/layout10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/camera_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/camera"
                        android:scaleType="fitXY"
                        android:layout_marginTop="20dp"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Camera" />

                    <ImageButton
                        android:id="@+id/gallery_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/gallery"
                        android:text="Gallery" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submit_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="153dp"
                    android:layout_height="38dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape_capsule"
                    android:gravity="center"
                    android:padding="8dp"
                    android:shadowColor="#D24CAF50"
                    android:text="Submit" />

                <Button
                    android:id="@+id/detail_adding_cancel_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="153dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape_capsule"
                    android:gravity="center"
                    android:padding="8dp"
                    android:shadowColor="#A38F5353"
                    android:text="Cancel" />

            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>