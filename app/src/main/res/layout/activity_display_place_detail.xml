<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CategorySelection">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Place Name"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="casual" />


        <Button
            android:id="@+id/review_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_shape_capsule"
            android:padding="8dp"
            android:text="REVIEWS" />

        <Button
            android:id="@+id/map_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_shape_capsule"
            android:padding="8dp"
            android:text="MAP" />


    </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <ImageView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/adventure_travel" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="left|right"
            android:gravity="start|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:foregroundGravity="left"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/like_text"
                android:layout_gravity="start"
                android:foregroundGravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <ImageView
                android:id="@+id/comment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="end"
                android:foregroundGravity="right"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="end"
                android:foregroundGravity="right"
                android:text="0" />

        </LinearLayout>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="casual"
                    android:lineSpacingExtra="8sp"
                    android:text="descrption text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#0A0A0A"
                    android:textSize="18sp"
                    android:typeface="sans"
                    app:fontFamily="casual" />

            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="8sp"
                    android:text="Category :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:typeface="sans"
                    app:fontFamily="casual"/>

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:lineSpacingExtra="8sp"
                    android:text="Ambalangoda"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="#0A0A0A"
                    android:textSize="18sp"
                    android:typeface="sans"
                    app:fontFamily="casual"/>
            </LinearLayout>

         <LinearLayout
             android:id="@+id/layout6"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp">

             <TextView
                 android:id="@+id/nTown"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="10dp"
                 android:lineSpacingExtra="8sp"
                 android:text="Nearest Town :"
                 android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                 android:textColor="#FF9800"
                 android:textSize="18sp"
                 android:typeface="sans"
                 app:fontFamily="casual"/>

             <TextView
                 android:id="@+id/nTownText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="10dp"
                 android:lineSpacingExtra="8sp"
                 android:layout_marginLeft="5dp"
                 android:text="Ambalangoda"
                 android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                 android:textColor="#0A0A0A"
                 android:textSize="18sp"
                 android:typeface="sans"
                 app:fontFamily="casual"/>

         </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/route"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="8sp"
                        android:text="Route : "
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#FF9800"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="casual"/>

                    <TextView
                        android:id="@+id/routeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:lineSpacingExtra="8sp"
                        android:text="Ambalangoda"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#0A0A0A"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="casual"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/difficulties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:lineSpacingExtra="8sp"
                        android:text="Difficulties :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#FF9800"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="casual"/>

                    <TextView
                        android:id="@+id/difficultiesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="8sp"
                        android:layout_marginLeft="5dp"
                        android:text="flhjgvf jdvfvjb fdvkfv  difdhv f ofihvfv dfvohbl"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#0A0A0A"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="casual"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/special_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:lineSpacingExtra="8sp"
                        android:text="Special Notice :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#FF9800"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="casual"/>

                    <TextView
                        android:id="@+id/special_notice_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:lineSpacingExtra="8sp"
                        android:text="dvf bb djkdfvf hsdfghjklcdv n cdfvfjv fdfjvkfbv gbv "
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#0A0A0A"
                        android:textSize="18sp"
                        android:typeface="sans"
                        app:fontFamily="casual"/>

                </LinearLayout>

            </LinearLayout>

</ScrollView>
</LinearLayout>

</RelativeLayout>