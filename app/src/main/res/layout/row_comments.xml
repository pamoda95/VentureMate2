<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/colorWhite">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_Image_c"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/name_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shirmi"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/profile_Image_c"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/comment_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_c"
            android:layout_toRightOf="@+id/profile_Image_c"
            android:text="This is actual comment"
            android:textColor="@color/colorBlack"
            android:paddingLeft="5dp"
            android:layout_toEndOf="@id/profile_Image_c"
            />
        <TextView
            android:id="@+id/time_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_c"
            android:text="02/01//2020"
            android:layout_toRightOf="@+id/profile_Image_c"
            android:paddingLeft="5dp"
            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>